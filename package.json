{
	"name": "light-deploy",
	"displayName": "light-deploy",
	"description": "一个轻量级的编译打包工具",
	"version": "1.0.0",
	"publisher": "CononYc",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Extension Packs"
	],
	"repository": {
	},
	"activationEvents": [
		"onCommand:light-deploy.deploy"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "light-deploy.deploy",
				"title": "执行发布（light-deploy）"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "light-deploy.deploy",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Light-deploy",
			"properties": {
				"light-deploy.config": {
					"type": "object",
					"description": "请在config中编辑"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"archiver": "^4.0.1",
		"moment": "^2.25.1",
		"node-ssh": "^8.0.0"
	}
}
